@using Cyberia.Salamandra;

@using System.Text
@using System.Globalization

@{
	ViewBag.Culture = Context.Request.RouteValues["culture"];
}

@functions {
	private string IsSelected(string name)
	{
		var path = $"/{ViewBag.Culture}/{name}";
		return Context.Request.Path.StartsWithSegments(path, StringComparison.OrdinalIgnoreCase) ? "selected" : "";
	}
}

<!DOCTYPE html>

<html lang="@ViewBag.Culture">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<link rel="icon" href="~/favicon.ico">
	<link rel="stylesheet" href="~/css/icons.css">
	<link rel="stylesheet" href="~/css/layout.css">
	<title>@ViewBag.Title - @Context.Request.Host</title>
</head>
<body>
	<header>
		<nav>
			<ul>
				<li><a asp-route-culture="@ViewBag.Culture" asp-page="/breeds" class="@IsSelected("breeds")">@WebTranslations.Page_Breeds_Title</a></li>
				<li><a asp-route-culture="@ViewBag.Culture"  asp-page="/items" class="@IsSelected("items")">@WebTranslations.Page_Items_Title</a></li>
				<li><a asp-route-culture="@ViewBag.Culture"  asp-page="/spells" class="@IsSelected("spells")">@WebTranslations.Page_Spells_Title</a></li>
				<li><a asp-route-culture="@ViewBag.Culture" asp-page="/monsters" class="@IsSelected("monsters")">@WebTranslations.Page_Monsters_Title</a></li>
				<li><a asp-route-culture="@ViewBag.Culture" asp-page="/dungeons" class="@IsSelected("dungeons")">@WebTranslations.Page_Dungeons_Title</a></li>
				<li><a asp-route-culture="@ViewBag.Culture" asp-page="/quests" class="@IsSelected("quests")">@WebTranslations.Page_Quests_Title</a></li>
				<li><a asp-route-culture="@ViewBag.Culture"  asp-page="/tools" class="@IsSelected("tools")">@WebTranslations.Page_Tools_Title</a></li>
			</ul>
		</nav>
	</header>

	<main>
		<vc:breadcrumbs />
		@RenderBody()
		CurrentUICulture=@CultureInfo.CurrentUICulture.DisplayName
		<br>
		Header Accept-Language=@Context.Request.Headers["Accept-Language"]
		<br>
		Cookie culture=@Context.Request.Cookies["culture"]
	</main>

	<footer>
		<div class="left">
			<p><span class="icon-code"></span>&nbsp;@Translation.Format(WebTranslations.Layout_DevelopedBy, "Lounek")</p>
			<p><a href="@Context.Request.Host">@Context.Request.Host</a>&nbsp;@WebTranslations.Layout_NotAffiliated&nbsp;<a href="https://www.ankama.com">Ankama Games</a></p>
		</div>
		<div class="right">
			@if (!string.IsNullOrEmpty(Bot.Config.GuildInviteUrl))
			{
				<a href="@Bot.Config.GuildInviteUrl"><span class="icon-discord"></span></a>
			}
			@if (!string.IsNullOrEmpty(Web.Config.GitUrl))
			{
				<a href="@Web.Config.GitUrl"><span class="icon-git"></span></a>
			}
		</div>
	</footer>
</body>
</html>
