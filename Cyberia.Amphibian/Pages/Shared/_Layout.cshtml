@using Cyberia.Salamandra;

@using System.Text

<!DOCTYPE html>

<html lang="fr">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<link rel="icon" href="~/favicon.ico">
	<link rel="stylesheet" href="~/css/icons.css">
	<link rel="stylesheet" href="~/css/layout.css">
	<title>@ViewBag.Title - @Context.Request.Host</title>
</head>
<body>
	<header>
		<nav>
			<ul>
				<li><a asp-page="Breeds" class="@IsSelected("/breeds")">Classes</a></li>
				<li><a asp-page="Items" class="@IsSelected("/items")">Items</a></li>
				<li><a asp-page="Spells" class="@IsSelected("/spells")">Sorts</a></li>
				<li><a asp-page="Monsters" class="@IsSelected("/monsters")">Monstres</a></li>
				<li><a asp-page="Dungeons" class="@IsSelected("/dungeons")">Donjons</a></li>
				<li><a asp-page="Quests" class="@IsSelected("/quests")">Quetes</a></li>
				<li><a asp-page="Tools" class="@IsSelected("/tools")">Outils</a></li>
			</ul>
		</nav>
	</header>

	<main>
		@(await Html.RenderComponentAsync<Breadcrumbs>(RenderMode.Static))

		@RenderBody()
	</main>

	<footer>
		<div class="left">
			<p><span class="icon-code"></span>&nbsp;Développé par Lounek</p>
			<p><a href="@Context.Request.Host">@Context.Request.Host</a>&nbsp;est un fansite non affilié à&nbsp;<a href="https://www.ankama.com">Ankama Games</a></p>
		</div>
		<div class="right">
			@if (!string.IsNullOrEmpty(@Bot.Config.GuildInviteUrl))
			{
				<a href="@Bot.Config.GuildInviteUrl"><span class="icon-discord"></span></a>
			}
			@if (!string.IsNullOrEmpty(@Web.Config.GitUrl))
			{
				<a href="@Web.Config.GitUrl"><span class="icon-git"></span></a>
			}
		</div>
	</footer>
</body>
</html>

@functions {
	private string IsSelected(string page)
	{
		return Context.Request.Path.StartsWithSegments(page, StringComparison.OrdinalIgnoreCase) ? "selected" : "";
	}
}
