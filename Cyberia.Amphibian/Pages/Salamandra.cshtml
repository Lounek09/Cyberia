@page
@using Cyberia.Api
@model IndexModel
@{
	ViewBag.Title = Translation.Get<WebTranslations>("Page.Salamandra.Title");
	ViewBag.Favicon = "favicon-salamandra.png";
	ViewBag.PageStyle = "salamandra.css";
}

<div class="logo">
	<img src="@DofusApi.Config.CdnUrl/images/web/salamandra-left.png">
</div>

<div class="content">
	<h1>@ViewBag.Title</h1>

	<nav>
		<a asp-culture-page="/salamandra/tos">@(Translation.Get<WebTranslations>("Page.SalamandraTos.Title"))</a>
		<span>-</span>
		<a asp-culture-page="/salamandra/privacy">@(Translation.Get<WebTranslations>("Page.SalamandraPrivacy.Title"))</a>
	</nav>
</div>
