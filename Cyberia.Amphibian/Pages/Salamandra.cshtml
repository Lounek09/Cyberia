@page
@using Cyberia.Api
@inject DofusApiConfig DofusApiConfig
@model SalamandraModel
@{
	ViewData["Title"] = Translation.Get<WebTranslations>("Page.Salamandra.Title");
	ViewData["Favicon"] = "favicon-salamandra.png";
	ViewData["PageStyle"] = "salamandra.css";
}

<div class="logo">
	<img src="@DofusApiConfig.CdnUrl/images/web/salamandra-left.png">
</div>

<div class="content">
	<h1>@ViewData["Title"]</h1>

	<nav>
		<a asp-culture-page="/salamandra/tos">@(Translation.Get<WebTranslations>("Page.SalamandraTos.Title"))</a>
		<span>-</span>
		<a asp-culture-page="/salamandra/privacy">@(Translation.Get<WebTranslations>("Page.SalamandraPrivacy.Title"))</a>
	</nav>
</div>
